{
	"orbred": "#EE0C55",
	"orbblue": "#0C55EE",
	"orbgreen": "#00A916",
	"orbyellow": "#EE7C0C",
	"orbgray": "#575757",
	"maincolor": "@orbyellow",
	"bordercolor": "fadeout(@maincolor, 50%)",
	"headerbg": "fadeout(@maincolor, 90%)",
	"buttonhoverbg": "fadeout(@maincolor, 30%)",
	"container": {
		"color": {
			"bg": "#fefefe",
			"fg": "black",
			"border": "white"
		}
	},
	"pivot": {
		"color": {
			"bg": "white",
			"fg": "black",
			"border": "@bordercolor"
		}
	},
	"header": {
		"color": {
			"bg": "@headerbg",
			"fg": "black",
			"border": "@pivot-color-border"
		}
	},
	"subtotal-header": {
		"color": {
			"bg": "@headerbg",
			"fg": "black",
			"border": "@pivot-color-border"
		}
	},
	"grandtotal-header": {
		"color": {
			"bg": "@headerbg",
			"fg": "black",
			"border": "@pivot-color-border"
		}
	},
	"cell": {
		"color": {
			"bg": "white",
			"fg": "black",
			"border": "@pivot-color-border"
		}
	},
	"subtotal-cell": {
		"color": {
			"bg": "white",
			"fg": "black",
			"border": "@pivot-color-border"
		}
	},
	"grandtotal-cell": {
		"color": {
			"bg": "white",
			"fg": "black",
			"border": "@pivot-color-border"
		}
	},
	"fieldgroup": {
		"caption": {
			"color": {
				"fg": "#ccc"
			}
		}
	},
	"fieldbutton": {
		"color": {
			"bg": "@maincolor",
			"bg-alpha": "@buttonhoverbg",
			"fg": "white",
			"border": "@pivot-color-border"
		}
	},
	"togglebutton": {
		"color": {
			"bg": "",
			"fg": "",
			"hover-bg": "fadeout(@maincolor, 50%)",
			"border": ""
		}
	},
	"drop-target": {
		"color": {
			"bg": "",
			"fg": "",
			"border": "white"
		}
	},
	"drop-target-over": {
		"color": {
			"bg": "fadeout(@maincolor, 95%)",
			"fg": "",
			"border": "@pivot-color-border"
		}
	},
	"drop-indicator-over": {
		"color": {
			"bg": "",
			"fg": "",
			"border": "@pivot-color-border"
		}
	}
