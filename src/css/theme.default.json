{
	"bordercolor": "fadeout(@maincolor, 50%)",
	"headerbg": "fadeout(@maincolor, 90%)",
	"buttonhoverbg": "fadeout(@maincolor, 30%)",
	"container": {
		"color": {
			"bg": "#fefefe",
			"fg": "black",
			"border": "white"
		}
	},
	"pivot": {
		"color": {
			"bg": "white",
			"fg": "black",
			"border": "@bordercolor"
		}
	},
	"header": {
		"color": {
			"bg": "@headerbg",
			"fg": "black",
			"border": "@pivot-color-border"
		}
	},
	"subtotal-header": {
		"color": {
			"bg": "@headerbg",
			"fg": "black",
			"border": "@pivot-color-border"
		}
	},
	"grandtotal-header": {
		"color": {
			"bg": "@headerbg",
			"fg": "black",
			"border": "@pivot-color-border"
		}
	},
	"cell": {
		"color": {
			"bg": "white",
			"fg": "black",
			"border": "@pivot-color-border"
		}
	},
	"subtotal-cell": {
		"color": {
			"bg": "white",
			"fg": "black",
			"border": "@pivot-color-border"
		}
	},
	"grandtotal-cell": {
		"color": {
			"bg": "white",
			"fg": "black",
			"border": "@pivot-color-border"
		}
	},
	"fieldgroup": {
		"caption": {
			"color": {
				"fg": "#ccc"
			}
		}
	},
	"fieldbutton": {
		"color": {
			"bg": "@maincolor",
			"bg-alpha": "@buttonhoverbg",
			"fg": "white",
			"border": "@pivot-color-border"
		}
	},
	"filterbutton": {
		"color": {
			"bg": "@fieldbutton-color-bg",
			"bg-hover": "@fieldbutton-color-bg-alpha"
		}
	},
	"filter-container": {
		"color": {
			"shadow": "desaturate(spin(@maincolor, 0), 85%)"
		}
	},	
	"togglebutton": {
		"color": {
			"hover-bg": "fadeout(@maincolor, 50%)"
		}
	},
	"drop-target": {
		"color": {
			"border": "white"
		}
	},
	"drop-target-over": {
		"color": {
			"bg": "fadeout(@maincolor, 95%)",
			"border": "@pivot-color-border"
		}
	},
	"drop-indicator-over": {
		"color": {
			"border": "@pivot-color-border"
		}
	},
	"orb-overlay": {
		"color": {
			"bg": "fadeout(desaturate(spin(@maincolor, 0), 85%), 55%)"
		}
	},
	"orb-dialog": {
		"color": {
		    "bg": "white",
		    "border": "desaturate(spin(@maincolor, 0), 85%)",
			"header" : {
				"bg": "white",
				"buttonclose": {
					"bg": "white",
					"bg-hover": "@togglebutton-color-hover-bg"
				}
			}
		}
	},
	"orb-table": {
		"color": {
			"td": {
			    "border": "@cell-color-border"
			},
			"th": {
			    "bg": "@fieldbutton-color-bg",
				"fg": "@fieldbutton-color-fg",
			    "border": "@fieldbutton-color-border"
			}
		}
	}
}